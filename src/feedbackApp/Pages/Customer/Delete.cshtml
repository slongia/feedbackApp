@page "{id:int}"
@model feedbackApp.Pages.Customer.DeleteModel
@{
    ViewData["Title"] = "Delete Customer";
}

<h1>Delete Customer</h1>

<h3>Are you sure you want to delete this customer?</h3>
<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Customer.Name</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Customer.Email</dd>

        <dt class="col-sm-2">Loyalty Level</dt>
        <dd class="col-sm-10">@Model.Customer.LoyaltyLevel</dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Customer.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>
@page "{id:int}"
@model feedbackApp.Pages.Customer.DetailsModel
@{
    ViewData["Title"] = "Customer Details";
}

<h1>Customer Details</h1>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Customer.Name</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Customer.Email</dd>

        <dt class="col-sm-2">Loyalty Level</dt>
        <dd class="col-sm-10">@Model.Customer.LoyaltyLevel</dd>
    </dl>
</div>

<p>
    <a asp-page="./Edit" asp-route-id="@Model.Customer.Id" class="btn btn-primary">Edit</a>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</p>